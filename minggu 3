<script>
var vid = document.getElementById("myVideo");
function enable Controls() {
vid.controls = true;
vid.load();
}

function disableControls() {
vid.controls = false;
vid.load();
}

function checkControls () {
alert(vid.controls);
}

function durationVid() {
alert(vid.controls);
}

function playVid() {
vid.play();
}

function pauseVid() {
vid.pause();
}
</script>
